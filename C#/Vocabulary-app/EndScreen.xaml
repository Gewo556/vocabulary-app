<Window x:Class="Vocabulary_app.EndScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vocabulary_app"
        mc:Ignorable="d"
        Title="Końcowy wynik" Height="150" Width="350"
        KeyDown="Window_KeyDown">
    <Grid Margin="10">
        <TextBlock x:Name="txtSummary" HorizontalAlignment="Center" VerticalAlignment="Top" FontFamily="Tahoma" FontSize="16" >
            Wszystkie słowa zostały przetłumaczone.
            <LineBreak/>
            Zdobyłeś {punkty} punktów w {tura} próbach,
            <LineBreak/>
            a to daje ocenę {ocena}.
        </TextBlock>
        <Button Content="Zamknij" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="CloseButton_Click" FontSize="15" />
    </Grid>
</Window>
