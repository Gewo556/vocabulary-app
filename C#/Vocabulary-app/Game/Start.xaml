<Window x:Class="Vocabulary_app.Game.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vocabulary_app.Game"
        mc:Ignorable="d"
        Title="Aplikacja do słówek" Height="500" Width="800">
    <Grid Margin="10">
        <Frame Name="mainFrame" NavigationUIVisibility="Hidden" />
        <Button x:Name="btnStart" Content="Start" HorizontalAlignment="Center" Background="#F5B7B1"  VerticalAlignment="Center" Click="btnStart_Click" FontSize="60" Padding="15" FontWeight="Bold" Width="400" FontFamily="Tahoma" />
    </Grid>
</Window>
